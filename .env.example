# Copy this file to .env and fill in the values.
# .env is gitignored — never commit it.
# Tip: use `op run --env-file=.env -- docker compose -f compose.prod.yaml up` to
# inject values directly from 1Password.

# ── Caddy ─────────────────────────────────────────────────────────────────────
# Local testing:  SERVER_HOST=:80
# Production:     SERVER_HOST=recipes.example.com
SERVER_HOST=:80

# ── Database ──────────────────────────────────────────────────────────────────
DB_USER=myuser
DB_PASSWORD=secret
DB_NAME=mydatabase

# ── Auth0 (backend — JWT validation) ─────────────────────────────────────────
AUTH0_ISSUER_URI=https://your-tenant.eu.auth0.com/
AUTH0_AUDIENCE=https://your-api.example.com

# ── Auth0 (frontend — baked into the bundle at image build time) ──────────────
VITE_AUTH0_DOMAIN=your-tenant.eu.auth0.com
VITE_AUTH0_CLIENT_ID=your-client-id
VITE_AUTH0_AUDIENCE=https://your-api.example.com

# ── Anthropic ─────────────────────────────────────────────────────────────────
ANTHROPIC_API_KEY=
